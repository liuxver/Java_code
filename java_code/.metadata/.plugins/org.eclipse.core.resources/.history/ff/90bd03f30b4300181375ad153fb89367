package sort;

public class QuickSort {
	public static void main(String[] args){
		int[] list={4,3,2,5,6,2,1,2,2,-7,15,4};
		quickSort(list);
		for(int i=0;i<list.length;i++){
			System.out.print(list[i]+" ");
        }
	}
	
	public static void quickSort(int[] list){
		quickSort(list,0,list.length-1);
	}
	
	private static void quickSort(int[] list,int first,int last){
		if(last>first){
			int pivotIndex=partition(list,first,last);
			//System.out.println(pivotIndex+"\n");
			/*for(int i=0;i<list.length;i++){
				System.out.print(list[i]+" ");
			}*/
			quickSort(list,first,pivotIndex-1);
			quickSort(list,pivotIndex+1,last);
		}
	}
	
	private static int partition(int[] list,int first,int last){
		
		int data=list[last];
		//int i=list[first]>data
		int i=first-1,j=first;
		for(;i<last&&j<last;j++){
			if(list[j]<=data){
				i++;
				int temp=list[j];
				list[j]=list[i];
				list[i]=temp;
			}
		}
		return i;
		
		/*
		int pivot=list[first];
		int low=first+1;
		int high=last;
		
		while(high>low){
			while(low<=high&&list[low]<=pivot){
				low++;
			}
			
			while(low<=high&&list[high]>pivot){
				high--;
			}
			
			if(high>low){
				int temp=list[high];
				list[high]=list[low];
				list[low]=temp;
			}
		}
		
		//System.out.println("low is "+low+"   high is "+high);
		
		while(high>low&&list[high]>=pivot){
			high--;
		}
		//System.out.println("high is "+high);
	//	System.out.println("when -- high is "+high);
		if(pivot>list[high]){
			list[first]=list[high];
			list[high]=pivot;
			return high;
		}
		else{
			//System.out.println("first is "+first);
			return first;
		}
		
		*/
	}
	
	
}
